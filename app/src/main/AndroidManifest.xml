<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FerreProDigital"
        tools:targetApi="31">

        <!-- Pantalla de inicio (Splash) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FerreProDigital">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Registro de Usuario -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"/>

        <!-- Tienda - Muestra las categorías -->
        <activity
            android:name=".ShopActivity"
            android:exported="false"
            android:label="@string/title_activity_shop"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Lista de productos de cada categoría -->
        <activity
            android:name=".ProductListActivity"
            android:exported="true"
            android:label="Lista de productos"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Detalle de un producto -->
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Carrito de Compras -->
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:label="@string/title_activity_cart"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Checkout - Confirmación de compra -->
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:label="@string/title_activity_checkout"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Métodos de pago -->
        <activity
            android:name=".CreditActivity"
            android:exported="false"
            android:label="@string/title_activity_credit"
            android:theme="@style/Theme.FerreProDigital" />

        <!-- Categorías de productos -->
        <activity android:name=".FontaneriaActivity" android:exported="false" />
        <activity android:name=".HerramientasActivity" android:exported="false" />
        <activity android:name=".MaterialesObraActivity" android:exported="false" />
        <activity android:name=".RopaTrabajoActivity" android:exported="false" />
        <activity android:name=".MaterialElectricoActivity" android:exported="false" />
        <activity android:name=".HogarActivity" android:exported="false" />
        <activity android:name=".JardinActivity" android:exported="false" />
        <activity android:name=".BricolajeActivity" android:exported="false" />

    </application>
</manifest>
